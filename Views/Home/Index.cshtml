@{
    ViewData["Title"] = "Home Page";
}
<section class="d-flex flex-column align-items-center justify-content-center" style="width: 60%; height: 100vh; background-color: #ffffff; padding: 20px;">
    <div class="card shadow-sm" style="max-width: 700px; width: 100%; height: 100% ; max-height: 500px ; padding: 32px;">
        <h2 class="display-4 text-center text-success mb-4">Two-Way South Africa</h2>
        <p class="lead text-center mb-4">Your one-stop solution for community reporting.</p>
        <div class="d-flex justify-content-between gap-3 flex-wrap">
            <!-- Local Events Block -->
            <div class="dashboard-block card p-4 text-center shadow-sm" style="flex: 1 1 calc(33.333% - 20px);">
                <h3 class="text-success">Local Events</h3>
                <p>Explore upcoming events in your area.</p>
                <a href="/Event/LocalEvents" class="btn btn-primary">View Events</a>
            </div>
            <!-- Submit Report Block -->
            <div class="dashboard-block card p-4 text-center shadow-sm" style="flex: 1 1 calc(33.333% - 20px);">
                <h3 class="text-success">Submit Report</h3>
                <p>Report any issues or concerns in your community.</p>
                <a href="/Issue/ReportIssue" class="btn btn-primary">Submit Report</a>
            </div>
            <!-- Report Status Block -->
            <div class="dashboard-block card p-4 text-center shadow-sm" style="flex: 1 1 calc(33.333% - 20px);">
                <h3 class="text-success">Report Status</h3>
                <p>Check the status of your reports (Coming Soon).</p>
                <a href="#" class="btn btn-secondary disabled">Coming Soon</a>
            </div>
        </div>
    </div>
</section>