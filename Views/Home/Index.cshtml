@{
    ViewData["Title"] = "Home";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="text-center mb-5">
    <h1 class="display-4 text-success">Two-Way South Africa</h1>
    <p class="lead">Your one-stop solution for community reporting and local events.</p>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <h3 class="card-title text-success">Local Events</h3>
                <p class="card-text">Explore upcoming events in your area.</p>
                <a href="/Event/LocalEvents" class="btn btn-primary">View Events</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <h3 class="card-title text-success">Submit Report</h3>
                <p class="card-text">Report any issues or concerns in your community.</p>
                <a href="/Issue/ReportIssue" class="btn btn-primary">Submit Report</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <h3 class="card-title text-success">Report Status</h3>
                <p class="card-text">Check the status of your reports.</p>
                <button class="btn btn-secondary" disabled title="Coming Soon">View Reports</button>
                <p class="text-muted mt-2"><small>This feature is coming soon!</small></p>
            </div>
        </div>
    </div>
</div>
