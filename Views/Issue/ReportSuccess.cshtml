@{
    ViewData["Title"] = "Report Submitted Successfully";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center text-success mb-4">Report Submitted Successfully</h2>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }
                <p class="text-center">Thank you for submitting your report. We will review it shortly.</p>
                <div class="text-center mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
