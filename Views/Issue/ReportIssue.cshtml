@model TWSA.Models.Issue

@{
    ViewData["Title"] = "Report Issue";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center text-success mb-4">Report an Issue</h2>

                <form asp-action="ReportIssue" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Subject">Subject</label>
                        <input asp-for="Subject" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Location">Location</label>
                        <input asp-for="Location" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Category">Category</label>
                        <input asp-for="Category" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="MediaAttachment">Media Attachment</label>
                        <input type="file" asp-for="MediaAttachment" class="form-control-file" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Submit Report</button>
                </form>
            </div>
        </div>
    </div>
</div>
